@model StarEvents.Models.ViewModels.DiscountViewModel

@{
    ViewBag.Title = "Edit Discount";
}

<div class="container my-4">
    <h2>@(Model.DiscountId == 0 ? "Create Discount" : "Edit Discount")</h2>

    @using (Html.BeginForm("EditDiscount", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.DiscountId)

        <div class="mb-3">
            @Html.LabelFor(m => m.Code)
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>

        <div class="row g-2">
            <div class="col">
                @Html.LabelFor(m => m.Percentage)
                @Html.TextBoxFor(m => m.Percentage, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
            <div class="col">
                @Html.LabelFor(m => m.Amount)
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
        </div>

        <div class="row g-2 mt-2">
            <div class="col">
                @Html.LabelFor(m => m.StartDate)
                @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col">
                @Html.LabelFor(m => m.EndDate)
                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
        </div>

        <div class="form-check mt-2">
            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
            @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-link" href="@Url.Action("Discounts","Admin")">Cancel</a>
        </div>
    }
</div>