@model IEnumerable<StarEvents.Models.ViewModels.EventViewModel>

@{
    ViewBag.Title = "Events - StarEvents";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Events</h2>

        @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Organizer"))
        {
            <a class="btn btn-success" href='@Url.Action("CreateEvent", "Organizer")'>Create Event</a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No events available at the moment.</div>
    }
    else
    {
        <div class="row">
            @foreach (var e in Model)
            {
                // Only show published events for non-organizers
                if (!e.IsPublished && !(User?.IsInRole("Organizer") ?? false))
                {
                    continue;
                }

                var displayDate = e.EventDate.HasValue ? e.EventDate.Value.ToString("dd MMM yyyy HH:mm") : "TBA";
                var venueName = string.IsNullOrWhiteSpace(e.VenueName) ? "TBA" : e.VenueName;

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        @if (!string.IsNullOrWhiteSpace(e.ImageUrl))
                        {
                            <img src="@e.ImageUrl"
                                 class="card-img-top"
                                 alt="@e.EventName"
                                 style="height:200px;object-fit:cover;border-top-left-radius:0.5rem;border-top-right-radius:0.5rem;" />
                        }

                        <div class="card-body">
                            <h5 class="card-title">@e.EventName</h5>
                            <p class="card-text text-muted mb-1">
                                <i class="bi bi-geo-alt-fill"></i> @venueName
                                <span class="mx-1">•</span>
                                <i class="bi bi-calendar-event-fill"></i> @displayDate
                            </p>
                            <p class="card-text">
                                <strong>Tickets:</strong> @e.TotalSeats (@e.AvailableSeats available)
                            </p>
                            <p class="card-text">
                                @((!string.IsNullOrEmpty(e.Description) && e.Description.Length > 180)
                                    ? e.Description.Substring(0, 180) + "…"
                                    : e.Description)
                            </p>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Details", "Event", new { id = e.EventId })"
                               class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>

                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                if (User.IsInRole("Customer") && e.IsPublished && e.IsActive)
                                {
                                    <a href="@Url.Action("BookTicket", "Booking", new { eventId = e.EventId })"
                                       class="btn btn-sm btn-primary">
                                        Book
                                    </a>
                                }
                                else if (User.IsInRole("Organizer"))
                                {
                                    <div>
                                        <a href="@Url.Action("EditEvent", "Organizer", new { id = e.EventId })"
                                           class="btn btn-sm btn-warning me-2">
                                            Edit
                                        </a>
                                        <span class="badge bg-info text-dark">Organizer</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Available</span>
                                }
                            }
                            else
                            {
                                var returnUrl = Url.Action("BookTicket", "Booking", new { eventId = e.EventId });
                                <a href="@Url.Action("Login", "Account", new { returnUrl = returnUrl })"
                                   class="btn btn-sm btn-secondary">
                                    Login to Book
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
